@model User

@{
    ViewData["Title"] = "Deletar Usuário";
}

<div class="text-center">

    <h1>Deletar o Usuário @Model.Name ?</h1>
    @Html.Raw(TempData["notexist"])
</div>
<div class="row g-3 align-items-center">

    <a type="submit" role="button" class="btn btn-sm btn-danger" asp-controller="Usuario" asp-action="Delete" asp-route-id="@Model.Id">Confirmar</a>
    <a type="submit" role="button" class="btn btn-sm btn-primary" asp-controller="Usuario" asp-action="Index">Cancelar</a>

</div>