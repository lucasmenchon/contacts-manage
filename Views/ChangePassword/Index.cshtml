@using ContactsManage.Enums
@model ChangePasswordModel
@{
    ViewData["Title"] = "Alterar Senha do Usuário";
}

<div class="text-center">

    <h1>Alterar senha do Usuário</h1>

</div>
<div id="ChangePasswordApp">
    <div class="container-fluid d-flex justify-content-center">
        <div class="row">

            <form asp-controller="ChangePassword" asp-action="Alterar" method="post">

                <div class="form-group col-auto">
                    <input type="password" asp-for="SenhaAtual" class="form-control" placeholder="Digite a senha atual" />
                    @Html.ValidationMessageFor(user => user.SenhaAtual)
                </div>

                <div class="form-group col-auto">
                    <input type="password" asp-for="NovaSenha" class="form-control" placeholder="Digite a nova senha" />
                    @Html.ValidationMessageFor(user => user.NovaSenha)
                </div>

                <div class="form-group col-auto">
                    <input type="password" asp-for="ConfirmarNovaSenha" class="form-control" placeholder="Confirme a nova senha" />
                    @Html.ValidationMessageFor(user => user.ConfirmarNovaSenha)
                </div>

                <div class="form-group col pt-1">
                    <button type="submit" class="btn btn-sm btn-primary mx-1">Alterar</button>
                    <a role="button" class="btn btn-sm btn-secondary" asp-controller="Home" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
    <div class="">
        <div class="col-auto pt-1">
            @if (TempData["MsgSuccess"] != null)
            {
                <div class="alert alert-success col-auto text-center" role="alert" v-show="alertDiv">
                    @TempData["MsgSuccess"]
                    <button type="button" class="btn btn-sm btn-danger btn-close rounded-circle p-1" aria-label="Close" @@click="closeAlert"></button>
                </div>
            }
            @if (TempData["MsgError"] != null)
            {
                <div class="alert alert-danger col-auto text-center" role="alert" v-show="alertDiv">
                    @TempData["MsgError"]
                    <button type="button" class="btn btn-sm btn-danger btn-close rounded-circle p-1" aria-label="Close" @@click="closeAlert"></button>
                </div>
            }
        </div>
    </div>
</div>
<script src="https://unpkg.com/vue@3.2.41/dist/vue.global.js"></script>
<script>
    const { createApp } = Vue

    createApp({
        data() {
            return {
                alertDiv: true,
            }
        },
        methods: {

            closeAlert: function () {
                _this = this
                this.alertDiv = false;
            },

        },

    }).mount('#ChangePasswordApp')
</script>