@model ContatoModel
@{
    ViewData["Title"] = "Add Contato";
}

<div class="text-center">

    <h1>Add Contato</h1>

</div>
<div class="row g-3 align-items-center">
    <form asp-controller="Contato" asp-action="Criar" method="post">
        <div class="form-group col-auto">
            <input type="text" asp-for="Nome" class="form-control" placeholder="Nome" />
        </div>

        <div class="form-group col-auto">
            <input type="text" asp-for="Email" class="form-control" placeholder="Email" />
        </div>

        <div class="form-group col-auto">
            <input type="text" asp-for="Celular" class="form-control" placeholder="Celular" />
        </div>

        <button type="submit" class="btn btn-sm btn-primary">Add</button>
        <a role="button" class="btn btn-sm btn-secondary" asp-controller="Contato" asp-action="Index">Voltar</a>

    </form>
</div>